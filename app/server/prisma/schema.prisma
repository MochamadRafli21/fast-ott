generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}

model Video {
  id           String       @id @default(uuid())
  title        String
  descriptions String
  url          String
  status       VIDEO_STATUS
  thumbnail    String
  createdAt    DateTime     @default(now())
}

enum VIDEO_STATUS {
  DRAFT
  PUBLISH
}
